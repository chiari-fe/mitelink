<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">

  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    <param name="plugin-icon">images/pluginIcon.png</param>
    <param name="plugin-logo">images/pluginLogo.png</param>
    <param name="configure.url">/plugins/servlet/mitelink</param>
  </plugin-info>

  <!-- add our i18n resource -->
  <resource type="i18n" name="i18n" location="mitelink"/>

  <!-- add our web resources -->
  <web-resource key="mitelink-resources" name="mitelink Web Resources">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <resource type="download" name="mitelink.css" location="/css/mitelink.css"/>
    <resource type="download" name="mitelink.js" location="/js/mitelink.js"/>
    <resource type="download" name="images/" location="/images"/>
    <context>atl.general</context>
    <context>atl.admin</context>
  </web-resource>

  <customfield-type name="Mite-Project Selector" i18n-name-key="org.chiari.jira.mitelink.mite-project-cf.name" key="mite-project-cf" class="org.chiari.jira.mitelink.customfields.MiteProjectCFType">
    <description key="org.chiari.jira.mitelink.mite-project-cf.description">Provides a customfield that fetches its Values from a yolk Mite instance</description>
    <resource name="view" type="velocity" location="/templates/customfields/mite-project-selector/view.vm"/>
    <resource name="edit" type="velocity" location="/templates/customfields/mite-project-selector/edit.vm"/>
  </customfield-type>

  <servlet name="Config Servlet" i18n-name-key="org.chiari.jira.mitelink.config-servlet.name" key="config-servlet" class="org.chiari.jira.mitelink.servlet.ConfigServlet">
    <description key="org.chiari.jira.mitelink.config-servlet.description">Provides a configuration-page for the plugin</description>
    <url-pattern>/mitelink</url-pattern>
  </servlet>

</atlassian-plugin>
